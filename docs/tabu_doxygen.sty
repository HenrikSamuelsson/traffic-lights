%% tabu_doxygen.sty â€” Safe replacement for Doxygen's tabu layer (TL2025 compatible)
%% Place this file next to Doxygen's LaTeX output (e.g., docs/doxygen/latex/) or list it in LATEX_EXTRA_FILES so Doxygen copies it there.
%% This maps tabu/longtabu constructs to longtable and provides an X column type, avoiding the broken tabu package.
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{tabu_doxygen}[2025/09/03 Safe replacement for tabu in Doxygen]
\RequirePackage{array}
\RequirePackage{longtable}
\RequirePackage{booktabs}
\RequirePackage{ragged2e}

%% Provide X column, similar to Doxygen's usage (raggedright p{<width>})
\newcolumntype{X}[1]{>{\RaggedRight\arraybackslash}p{#1}}

%% Map longtabu environment to longtable
\let\longtabu\longtable
\let\endlongtabu\endlongtable

%% Some tabu-specific helpers that Doxygen sometimes emits; provide no-op fallbacks
\providecommand{\tabulinesep}{1mm}
\providecommand{\arraybackslash}{}
\providecommand{\rowfont}[1]{}
\providecommand{\taburowcolors}[3][]{}

%% Compatibility: avoid undefined \insert@pcolumn calls (older tabu/array hook)
\makeatletter
\providecommand\insert@pcolumn[1]{\@startpbox{#1}} % start p{<width>} cell
\providecommand\endinsert@pcolumn{\@endpbox}       % end   p{<width>} cell
\makeatother
